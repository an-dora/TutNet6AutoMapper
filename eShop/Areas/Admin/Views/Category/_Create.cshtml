<!-- Modal thêm danh mục-->
<div class="modal fade" id="modalCreate" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{action}} danh mục</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12">
                        <div class="mt-2">
                            <label class="control-label">Tên danh mục</label>
                            <input class="form-control" v-model="cateData.name" />
                            {{cateData.name}}
                        </div>
                        <div class="mt-2">
                            <input v-on:click="addOrUpdateCateData()" type="button" :value="action" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>